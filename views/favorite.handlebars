    <div class="jumbotron">
        <h1 class="text-center">Your Collection.</h1>
        <p class="text-center">Scraping Reddit so you can build your <i>Artisan</i> Gif Collection.</p>
    </div>

    {{!-- FAVORITE ITEMS APPEND HERE --}}
    <div class="favItems grid col-lg-11 col-lg-offset-1">
        {{!-- {{favorite}} --}} {{#each favorite}}
        <div class="grid-item white img-rounded col-lg-12" id="{{_id}}" style="border-bottom: 1px solid black; padding-top: 15px">
            <div class="col-lg-12"><a href="{{url}}" target="_blank"><img class="img-responsive" src="{{thumbnail}}"></a></div>
            <div class="col-lg-12">
                <h3 class="text-primary" style="margin-top: 0;">{{title}}</h3>
            </div>
            <button class="col-lg-6 btn btn-primary noteBtn" data-title="{{title}}" data-url="{{url}}" data-thumbnail="{{thumbnail}}"
                data-id="{{_id}}">Add a Note</button>
            <button class="col-lg-6 btn btn-danger deleteFav" data-id="{{_id}}">Delete</button>
        </div>
        {{/each}}
    </div>

    {{!-- MODAL HERE --}}
    <div id="noteModal" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title notes-title">Your Notes</h4>
                </div>
                <div class="modal-body col-lg-12">
                    <div class="notes-body col-lg-12"></div>
                    <div class="noteBox">
                        <label for="comment">Enter Notes:</label>
                        <textarea class="form-control noteInput" rows="5" id="comment"></textarea>
                        <button class="btn btn-primary addNoteBtn">Add Note</button>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

</div>
